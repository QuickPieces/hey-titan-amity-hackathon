{
	"extends": "../../tsconfig.json",

	"include": ["./src"],
	"exclude": ["node_modules", "**/*.spec.ts"],

	"compilerOptions": {
		"baseUrl": "./src",
		"paths": {
			"~/*": ["./*"]
		},

		"rootDir": "./src",
		"outDir": "./dist",
		"declaration": true,
		"declarationDir": "./dist",
		"noEmit": true,

		"module": "es2020",
		"target": "es2017",

		"lib": [
			"esnext",
			"es7",
			"es6",
			"dom"
		],
		"resolveJsonModule": true
	}
}
